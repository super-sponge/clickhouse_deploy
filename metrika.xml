<yandex>

<!-- 集群配置 -->
<clickhouse_remote_servers>
    <ck_cluster>

        <!-- 数据分片1  -->
        <shard>
            <internal_replication>false</internal_replication>
            <replica>
                <host>vm1.centos74.com</host>
                <port>9000</port>
                <user>default</user>
            </replica>
        </shard>

        <!-- 数据分片2  -->
        <shard>
            <internal_replication>false</internal_replication>
            <replica>
                <host>vm2.centos74.com</host>
                <port>9000</port>
                <user>default</user>
            </replica>
        </shard>

        <!-- 数据分片3  -->
        <shard>
            <internal_replication>false</internal_replication>
            <replica>
                <host>vm3.centos74.com</host>
                <port>9000</port>
                <user>default</user>
            </replica>
        </shard>

    </ck_cluster>
</clickhouse_remote_servers>

<!-- 本节点副本名称（这里无用） -->
<macros>
    <replica>ck1</replica>
</macros>

<!-- 监听网络（貌似重复） -->
<networks>
   <ip>::/0</ip>
</networks>

<!-- ZK  -->
<zookeeper-servers>
  <node index="1">
    <host>vm1.centos74.com</host>
    <port>2181</port>
  </node>
  <node index="2">
    <host>vm2.centos74.com</host>
    <port>2181</port>
  </node>
  <node index="3">
    <host>vm3.centos74.com</host>
    <port>2181</port>
  </node>
</zookeeper-servers>

<!-- 数据压缩算法  -->
<clickhouse_compression>
<case>
  <min_part_size>10000000000</min_part_size>
  <min_part_size_ratio>0.01</min_part_size_ratio>
  <method>lz4</method>
</case>
</clickhouse_compression>

</yandex>
